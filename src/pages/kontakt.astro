---
import Layout from '~/layouts/PageLayout.astro';
const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata}>
  <div class="px-6 py-24 isolate sm:py-32 lg:px-8">
    <div
      class="absolute inset-x-0 top-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]"
      aria-hidden="true"
    >
      <div
        class="relative left-1/2 -z-10 aspect-1155/678 w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]"
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
      >
      </div>
    </div>
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-gray-900 dark:text-slate-400 text-balance sm:text-5xl">
        Kontakt
      </h2>
      <p class="mt-2 text-gray-600 text-lg/8">Aute magna irure deserunt veniam aliqua magna enim voluptate.</p>
    </div>
    <form
      name="contact"
      action="/kontakt-erfolgreich"
      data-netlify="true"
      method="POST"
      class="max-w-xl mx-auto mt-16 sm:mt-20"
    >
      <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
        <div>
          <label for="first-name" class="block font-semibold text-gray-900 dark:text-slate-400 text-sm/6">Vorname</label
          >
          <div class="mt-2.5">
            <input
              type="text"
              name="first-name"
              id="first-name"
              autocomplete="given-name"
              class="block w-full rounded-md bg-white dark:bg-slate-900 px-3.5 py-2 text-base text-gray-900 dark:text-slate-400 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
            />
          </div>
        </div>
        <div>
          <label for="last-name" class="block font-semibold text-gray-900 dark:text-slate-400 text-sm/6">Nachname</label
          >
          <div class="mt-2.5">
            <input
              type="text"
              name="last-name"
              id="last-name"
              autocomplete="family-name"
              class="block w-full rounded-md bg-white dark:bg-slate-900 px-3.5 py-2 text-base text-gray-900 dark:text-slate-400 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
            />
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="company" class="block font-semibold text-gray-900 dark:text-slate-400 text-sm/6">Firma</label>
          <div class="mt-2.5">
            <input
              type="text"
              name="company"
              id="company"
              autocomplete="organization"
              class="block w-full rounded-md bg-white dark:bg-slate-900 px-3.5 py-2 text-base text-gray-900 dark:text-slate-400 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
            />
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="email" class="block font-semibold text-gray-900 dark:text-slate-400 text-sm/6">E-Mail</label>
          <div class="mt-2.5">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              class="block w-full rounded-md bg-white dark:bg-slate-900 px-3.5 py-2 text-base text-gray-900 dark:text-slate-400 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
            />
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="message" class="block font-semibold text-gray-900 dark:text-slate-400 text-sm/6">Nachricht</label>
          <div class="mt-2.5">
            <textarea
              name="message"
              id="message"
              rows="4"
              class="block w-full rounded-md bg-white dark:bg-slate-900 px-3.5 py-2 text-base text-gray-900 dark:text-slate-400 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600"
            ></textarea>
          </div>
        </div>
        <div class="flex gap-x-4 sm:col-span-2">
          <div class="flex items-center h-6">
            <button
              type="button"
              class="flex flex-none w-8 p-px transition-colors duration-200 ease-in-out bg-gray-200 rounded-full cursor-pointer ring-1 ring-gray-900/5 ring-inset focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
              role="switch"
              aria-checked="false"
              aria-labelledby="switch-1-label"
            >
              <span class="sr-only">Zustimmung zur Dateschutzbestimmung</span>
              <span
                aria-hidden="true"
                class="transition duration-200 ease-in-out transform translate-x-0 bg-white rounded-full shadow-xs dark:bg-slate-900 size-4 ring-1 ring-gray-900/5"
              ></span>
            </button>
          </div>
          <label class="text-gray-600 text-sm/6" id="switch-1-label">
            Durch die Auswahl dieser Option erkl√§ren Sie sich mit unserer
            <a href="/datenschutz" class="font-semibold text-indigo-600">Dateschutzbestimmung</a>.
          </label>
        </div>
      </div>
      <div class="mt-10">
        <button
          type="submit"
          class="block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >Absenden</button
        >
      </div>
    </form>
  </div>
</Layout>
